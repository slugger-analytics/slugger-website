{
  "family": "slugger-frontend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::746669223415:role/slugger-ecs-execution",
  "taskRoleArn": "arn:aws:iam::746669223415:role/slugger-frontend-task",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "746669223415.dkr.ecr.us-east-2.amazonaws.com/slugger-frontend:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" }
      ],
      "secrets": [
        { "name": "NEXT_PUBLIC_API_URL", "valueFrom": "arn:aws:ssm:us-east-2:746669223415:parameter/slugger/api-url" },
        { "name": "NEXT_PUBLIC_COGNITO_APP_CLIENT_ID", "valueFrom": "arn:aws:ssm:us-east-2:746669223415:parameter/slugger/cognito-app-client-id-public" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/slugger-frontend",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget -q -O - http://localhost:3000/ >/dev/null 2>&1 || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
