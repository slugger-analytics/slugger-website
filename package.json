{
  "name": "slugger-website",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npx npm-run-all --parallel dev:frontend dev:backend",
    "dev:prod": "echo 'ðŸ”µ Using PRODUCTION RDS database' && export $(cat .env | grep -v '^#' | xargs) && npx npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "db:local:start": "docker-compose -f docker-compose.local.yml up -d",
    "db:local:stop": "docker-compose -f docker-compose.local.yml down",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=backend",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "cors": "^2.8.5"
  }
}
